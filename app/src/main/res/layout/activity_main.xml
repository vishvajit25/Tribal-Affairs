<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg2"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:text="FAMILY ID SETTING : " />


    <EditText
        android:id="@+id/familyheadname"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:textColor="@color/black"
        android:hint="FAMILY HEAD NAME : " />

    <EditText
        android:id="@+id/familyid"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="90dp"
        android:hint="FAMILY ID (number): " />

    <EditText
        android:id="@+id/familyaddress"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="130dp"
        android:hint="FAMILY ADDRESS : " />

    <TextView
        android:id="@+id/state"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="180dp"
        android:text=" STATE : TAMILNADU"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="18dp" />
    <EditText
        android:id="@+id/district"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="10dp"
        android:hint="DISTRICT : " />
    <EditText
        android:id="@+id/block"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="250dp"
        android:hint="BLOCK : " />
    <EditText
        android:id="@+id/taluk"
        android:layout_width="350dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="290dp"
        android:hint="TALUK : " />
    <EditText
        android:id="@+id/panchayat"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="330dp"
        android:hint="PANCHAYAT : " />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="TRIBE NAME : "
        android:layout_marginLeft="10dp"
        android:layout_marginTop="370dp"
        android:id="@+id/tribename"/>

    <EditText
        android:id="@+id/familysize"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="410dp"
        android:hint="NUMBER OF FAMILY MEMBERS :" />

    <AutoCompleteTextView
        android:id="@+id/familytype"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="10dp"
        android:hint="FAMILY TYPE : " />

    <Button
        android:id="@+id/create"
        android:layout_width="200dp"
        android:layout_marginLeft="10dp"
        android:layout_height="40dp"
        android:background="#216400"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="500dp"
        android:text="CREATE" />

    <Button
        android:id="@+id/next"
        android:layout_width="200dp"
        android:layout_marginLeft="10dp"
        android:layout_height="40dp"
        android:background="#216400"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="550dp"
        android:text="+ ADD FAMILY MEMBERS" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/nav"/>

    <Button
        android:layout_width="135dp"
        android:layout_height="50dp"
        android:id="@+id/map"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent" />
    <Button
        android:layout_width="135dp"
        android:layout_height="50dp"
        android:id="@+id/search"
        android:layout_marginLeft="135dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent" />
    <Button
        android:layout_width="135dp"
        android:layout_height="50dp"
        android:id="@+id/about"
        android:layout_marginLeft="270dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent" />


</RelativeLayout>