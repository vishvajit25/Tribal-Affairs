<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:background="@drawable/bg2"
tools:context=".EducationDetails">

    <TextView
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="EDUCATIONAL DETAILS : "
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="230dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="100dp"
        android:text="HIGHEST EDUCATION : "
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/highestedu"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="90dp"
        android:inputType="text" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="10dp"
        android:text="NAME OF SCHOOL : "
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/nameofedu"
        android:layout_width="300dp"
        android:layout_marginLeft="210dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp" />

    <TextView
        android:layout_width="230dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="160dp"
        android:text="DISTANCE OF SCHOOL : "
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

<EditText
    android:id="@+id/distance"
    android:layout_width="250dp"
    android:layout_marginLeft="240dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="150dp"
    android:inputType="phone" />
    <TextView
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="190dp"
        android:text="MONTHLY EDUCATIONAL EXPENSES :"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/eduexpense"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="205dp" />


    <Button
        android:id="@+id/next"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="260dp"
        android:gravity="center_horizontal"
        android:background="@drawable/buttonstyle"
        android:textColor="@color/white"
        android:text="NEXT" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/nav"/>

    <Button
        android:id="@+id/map"
        android:layout_width="135dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent" />

    <Button
        android:id="@+id/search"
        android:layout_width="135dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="135dp"
        android:background="@android:color/transparent" />

    <Button
        android:id="@+id/about"
        android:layout_width="135dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="270dp"
        android:background="@android:color/transparent" />



</RelativeLayout>