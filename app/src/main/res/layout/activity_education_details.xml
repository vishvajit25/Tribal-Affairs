<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_marginLeft="10dp"
tools:context=".EducationDetails">

<TextView
    android:layout_width="300dp"
    android:layout_height="30dp"
    android:layout_marginTop="10dp"
    android:text="EDUCATIONAL DETAILS : "
    android:textColor="@color/black"
    android:textSize="20dp"
    android:textStyle="bold" />
<AutoCompleteTextView
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:hint="EDUCATION : "
    android:layout_marginTop="50dp"
    android:id="@+id/education"/>


    <EditText
        android:id="@+id/nameofedu"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:hint="NAME OF SCHOOL/COLLEGE : " />

<EditText
    android:id="@+id/highestedu"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="130dp"
    android:hint="HIGHEST EDUCATION : "
    android:inputType="text" />

<EditText
    android:id="@+id/distance"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="170dp"
    android:hint="DISTANCE OF SCHOOL (km) : "
    android:inputType="phone" />
<EditText
    android:id="@+id/angavadi"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="210dp"
    android:hint="HOW FAR IS ANGAVADI : " />

<EditText
    android:id="@+id/eduexpense"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="250dp"
    android:hint="EDUCATION EXPENSE : " />


<Button
    android:layout_width="200dp"
    android:layout_height="40dp"
    android:text="NEXT"
    android:layout_marginTop="290dp"
    android:id="@+id/next"/>


</RelativeLayout>