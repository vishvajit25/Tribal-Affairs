<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg2"
        tools:context=".about">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONTRIBUTORS : "
        android:textSize="30dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>

    <androidx.cardview.widget.CardView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardElevation="8dp"
        android:background="@drawable/bg"
        app:cardCornerRadius="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp">
<!--        android:layout_margin="16dp">-->

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="VISHVAJIT S"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="25dp" />
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="220dp"
                android:src="@drawable/vishva"
                android:layout_alignParentLeft="true"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardElevation="8dp"
        android:background="@drawable/bg"
        app:cardCornerRadius="16dp"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Rajeev Ramakrishnan "
                android:textAlignment="center"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:textSize="25dp"
                android:textColor="@color/black"/>

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="220dp"
                android:src="@drawable/rajeev" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="304dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardElevation="8dp"
        android:background="@drawable/bg"
        app:cardCornerRadius="16dp"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:text="Dr. Udhay Kumar "
                android:textAlignment="center"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:textSize="25dp"
                android:textColor="@color/black"/>

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="220dp"
                android:src="@drawable/person" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="428dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardElevation="8dp"
        android:background="@drawable/bg"
        app:cardCornerRadius="16dp"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="Dr. T. Senthil Kumar "
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="25dp" />
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="220dp"
                android:src="@drawable/tsk"
                android:layout_alignParentLeft="true"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="552dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardElevation="8dp"
        android:background="@drawable/bg"
        app:cardCornerRadius="16dp"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Dr. S. Rajendra Kumar"
                android:textAlignment="center"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:textSize="25dp"
                android:textColor="@color/black"/>
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="220dp"
                android:src="@drawable/rajendra"
                android:layout_alignParentLeft="true"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/nav"/>

    <Button
        android:id="@+id/map"
        android:layout_width="135dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent" />

    <Button
        android:id="@+id/search"
        android:layout_width="135dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="135dp"
        android:background="@android:color/transparent" />

    <Button
        android:id="@+id/about"
        android:layout_width="135dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="270dp"
        android:background="@android:color/transparent" />


</RelativeLayout>